# Application Environment Configuration
# ----------------------------------
NODE_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=debug
ENVIRONMENT_VALIDATION=strict

# API Gateway Configuration
# -----------------------
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0
CORS_ORIGIN=*
JWT_SECRET=your-jwt-secret-at-least-32-chars-long
TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
SESSION_SECRET=your-session-secret-at-least-32-chars-long
API_KEY_ROTATION_INTERVAL=30d

# Rate Limiting Configuration
# -------------------------
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_BURST=200
RATE_LIMIT_PER_IP=50
RATE_LIMIT_PER_USER=100

# Database Configuration
# --------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sales_intelligence
DB_USER=postgres
DB_PASSWORD=your-strong-db-password
DB_SSL_MODE=require
DB_MAX_POOL_SIZE=20
DB_IDLE_TIMEOUT=10000

# Redis Configuration
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_CLUSTER_MODE=true
REDIS_TLS_ENABLED=true
REDIS_KEY_PREFIX=sip:
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1000

# Campaign Service Configuration
# ---------------------------
CAMPAIGN_SERVICE_PORT=3002
CAMPAIGN_SERVICE_HOST=0.0.0.0
MIN_BUDGET_AMOUNT=5
MAX_BUDGET_AMOUNT=1000000
MAX_CONCURRENT_CAMPAIGNS=50

# Analytics Service Configuration
# ----------------------------
ANALYTICS_SERVICE_PORT=3003
ANALYTICS_SERVICE_HOST=0.0.0.0
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL=60000
ANALYTICS_RETENTION_DAYS=730
METRICS_CACHE_TTL=300

# AI Service Configuration
# ----------------------
AI_SERVICE_PORT=3004
AI_SERVICE_HOST=0.0.0.0
OPENAI_API_KEY=your-openai-api-key
AI_MODEL_VERSION=gpt-4
AI_REQUEST_TIMEOUT=30000
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# Platform Integration Configuration
# -------------------------------
LINKEDIN_API_VERSION=202401
LINKEDIN_API_KEY=your-linkedin-api-key
LINKEDIN_API_SECRET=your-linkedin-api-secret
LINKEDIN_API_TIMEOUT=20000
LINKEDIN_BATCH_SIZE=100

GOOGLE_ADS_API_VERSION=v14
GOOGLE_ADS_API_KEY=your-google-ads-api-key
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_API_TIMEOUT=25000
GOOGLE_ADS_BATCH_SIZE=500

# Security Configuration
# --------------------
PASSWORD_HASH_ROUNDS=12
ENCRYPTION_KEY=your-32-char-encryption-key
SECURITY_ALERT_EMAIL=security@example.com
FAILED_LOGIN_THRESHOLD=5
MFA_ENABLED=true
SESSION_TIMEOUT=3600000
PASSWORD_MIN_LENGTH=12

# Monitoring Configuration
# ----------------------
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn
APM_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
METRICS_PRECISION=4

# Backup Configuration
# ------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Feature Flags
# ------------
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_AUTOMATED_BIDDING=true
ENABLE_ADVANCED_TARGETING=true