# API Configuration
# Base URL for API endpoints (HTTPS required in production)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Base application URL (HTTPS required in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Platform Integration - Advertising APIs
# Google Ads API client ID for campaign management
NEXT_PUBLIC_GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id

# LinkedIn Ads API client ID for campaign management
NEXT_PUBLIC_LINKEDIN_ADS_CLIENT_ID=your-linkedin-ads-client-id

# OAuth Authentication - Google
# Google OAuth client ID for user authentication
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Google OAuth client secret for user authentication
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# OAuth Authentication - LinkedIn
# LinkedIn OAuth client ID for user authentication
LINKEDIN_CLIENT_ID=your-linkedin-oauth-client-id

# LinkedIn OAuth client secret for user authentication
LINKEDIN_CLIENT_SECRET=your-linkedin-oauth-client-secret

# NextAuth.js Configuration
# NextAuth.js callback URL (must match application URL)
NEXTAUTH_URL=http://localhost:3000

# Secret key for NextAuth.js session encryption (min 32 characters)
NEXTAUTH_SECRET=your-nextauth-secret-key

# Application Environment
# Node.js environment mode (development|staging|production)
NODE_ENV=development